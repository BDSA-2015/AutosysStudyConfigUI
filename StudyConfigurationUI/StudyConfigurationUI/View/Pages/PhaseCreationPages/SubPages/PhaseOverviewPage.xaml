<Page
    x:Class="StudyConfigurationUI.View.Pages.PhaseCreationPages.SubPages.PhaseOverviewPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:StudyConfigurationUI.View.Pages.PhaseCreationPages.SubPages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:data="using:StudyConfigurationUI.Model.PhaseModels"
    mc:Ignorable="d">

    <Page.Resources>
        <Style TargetType="TextBlock" x:Key="ItemText">
            <Setter Property="FontSize" Value="11"/>
        </Style>
    </Page.Resources>

    <Grid x:Name="MainGrid" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup>
                <VisualState x:Name="NarrowState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="CriteriaTable.(Grid.Column)" Value="1" />
                        <Setter Target="CriteriaTable.(Grid.Row)" Value="0" />
                        <Setter Target="LeftColumn.Width" Value="Auto"/>
                        <Setter Target="CommandBar.ClosedDisplayMode" Value="Minimal"/>
                    </VisualState.Setters>
                </VisualState>

              <VisualState x:Name="WideState">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="1080"/>
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="CriteriaTable.(Grid.Column)" Value="0" />
                        <Setter Target="CriteriaTable.(Grid.Row)" Value="2" />
                        <Setter Target="LeftColumn.Width" Value="*"/>
                        <Setter Target="CommandBar.ClosedDisplayMode" Value="Compact"/>
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>

        </VisualStateManager.VisualStateGroups>

        <!-- Description header -->
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="0" Grid.Column="0">
            <TextBlock Text="Description:" Margin="10,10,0,0" FontSize="14" FontWeight="SemiBold"/>
            <TextBlock Text="This page shows you an overview of the current phase setup." Margin="10,0,0,0" FontSize="12" FontWeight="Light"  TextWrapping="WrapWholeWords" MaxWidth="200"/>
        </StackPanel >

        <!-- Table Pane -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid x:Name="InnerGrid">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition x:Name="LeftColumn" Width="*" />
                    <ColumnDefinition x:Name="Right" Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                

                <!-- Tables -->
                <StackPanel x:Name="RoleTable" VerticalAlignment="Center" Margin="20" Grid.Column="1" Grid.Row="1">
                    <TextBlock Text="Role" FontWeight="Medium" FontSize="18"/>

                    <ListView SelectionMode="None" CanReorderItems="True" BorderThickness="1" BorderBrush="Black" 
                      ItemsSource="{Binding Role}"
                      Height="200">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="data:Role">
                                <StackPanel Orientation="Horizontal">
                                    <!-- TODO figure out how to display roles and user together-->
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>

                <StackPanel x:Name="TaskTable" VerticalAlignment="Bottom" Margin="20" Grid.Column="1" Grid.Row="2">
                    <TextBlock Text="Tasks" FontWeight="Medium" FontSize="18"/>

                    <ListView SelectionMode="None" CanReorderItems="True" BorderThickness="1" BorderBrush="Black" 
                      ItemsSource="{Binding Tasks}"
                      Height="200">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="data:Task">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Description:" Margin="10,0,10,0" Style="{StaticResource ItemText}" FontWeight="SemiBold"/>
                                    <TextBlock x:Name="Description" Text="{Binding Description}" Style="{StaticResource ItemText}"/>

                                    <TextBlock Text="Type:" Margin="10,0,10,0" Style="{StaticResource ItemText}" FontWeight="SemiBold"/>
                                    <TextBlock x:Name="Type" Text="{Binding Type}" Style="{StaticResource ItemText}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>

                <StackPanel x:Name="CriteriaTable" VerticalAlignment="Bottom" Margin="20"  Grid.Column="0" Grid.Row="2">
                    <TextBlock Text="Criteria" FontWeight="Medium" FontSize="18"/>

                    <ListView SelectionMode="None" CanReorderItems="True" BorderThickness="1" BorderBrush="Black" 
                      ItemsSource="{Binding Criterias}"
                      Height="200">
                        <ListView.ItemTemplate>
                            <DataTemplate x:DataType="data:Criteria">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="Name:" Margin="10,0,10,0" Style="{StaticResource ItemText}" FontWeight="SemiBold"/>
                                    <TextBlock x:Name="Name" Text="{Binding Name}"   Style="{StaticResource ItemText}"/>

                                    <TextBlock Text="Description:" Margin="10,0,10,0" Style="{StaticResource ItemText}" FontWeight="SemiBold"/>
                                    <TextBlock x:Name="Description" Text="{Binding Description}" Style="{StaticResource ItemText}"/>

                                    <TextBlock Text="Comparator:" Margin="10,0,10,0" Style="{StaticResource ItemText}" FontWeight="SemiBold"/>
                                    <TextBlock x:Name="Comparator" Text="{Binding Comparator}" Style="{StaticResource ItemText}"/>

                                    <TextBlock Text="Value:" Margin="10,0,10,0" Style="{StaticResource ItemText}" FontWeight="SemiBold"/>
                                    <TextBlock x:Name="Value" Text="{Binding Value}" Style="{StaticResource ItemText}"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>

            </Grid>
        </ScrollViewer>


        <CommandBar x:Name="CommandBar" Grid.Row="2">
            <AppBarButton Icon="Save" Label="Save Phase"  />
            <AppBarSeparator/>
            <AppBarButton Icon="Back" Label="Back"/>
            <CommandBar.Content>
                <TextBlock Text="Options" Margin="12,14"/>
            </CommandBar.Content>
        </CommandBar>


    </Grid>
</Page>