<Application
    x:Class="StudyConfigurationUI.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:StudyConfigurationUI"
    RequestedTheme="Light">

    <Application.Resources>
        <!-- Removing circle from radio button so it doesnt get displayed in splitview-->
        <ResourceDictionary>
            <Style TargetType="RadioButton">
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate>
                            <ContentPresenter Margin="15"/>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Application.Resources>



</Application>
